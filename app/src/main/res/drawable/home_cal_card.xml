<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:startColor="@color/card_white"
                android:endColor="@color/coral"
                android:angle="0" />

            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />

            <stroke
                android:width="2dp"
                android:color="#80B4B4B4" />
        </shape>
    </item>
</selector>