<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#B6CFFD"
        android:centerColor="#D2EAF8"
        android:endColor="#F2F4F8"
        android:angle="45"
        android:type="linear"
        android:useLevel="false" />

    <corners android:radius="24dp" />

    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />

</shape>
