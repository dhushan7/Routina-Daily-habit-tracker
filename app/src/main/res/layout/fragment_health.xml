<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="@drawable/bg_health_card"
    tools:context=".HealthFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:spacing="16dp">

        <!-- ðŸ’§ Hydration Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="8dp"
            card_view:cardBackgroundColor="#E0F7FA"
            card_view:contentPadding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvHydration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’§ Hydration: 0 / 2000 ml"
                    android:textSize="20sp"
                    android:textColor="#006D77"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp" />

                <ProgressBar
                    android:id="@+id/progressHydration"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progress="0"
                    android:max="2000"
                    android:progressTint="#48CAE4"
                    android:backgroundTint="#B2EBF2"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnAddWater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add 250ml"
                        android:backgroundTint="#48CAE4"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="16dp"
                        android:elevation="4dp" />

                    <TextView
                        android:id="@+id/btnSetHydrationLimit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/set_hydration_limit"
                        android:textColor="#0077B6"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ðŸ”¥ Calories Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="8dp"
            card_view:cardBackgroundColor="#FFF3E0"
            card_view:contentPadding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ Calories: 0 / 2500 kcal"
                    android:textSize="20sp"
                    android:textColor="#E85D04"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp" />

                <ProgressBar
                    android:id="@+id/progressCalories"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progress="0"
                    android:max="2500"
                    android:progressTint="#FF9F1C"
                    android:backgroundTint="#FFE0B2"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnAddCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add 100 kcal"
                        android:backgroundTint="#FF9F1C"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="16dp"
                        android:elevation="4dp" />

                    <TextView
                        android:id="@+id/btnSetCalorieLimit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/set_calorie_limit"
                        android:textColor="#E85D04"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
